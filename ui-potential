CREATE TABLE UI (
	ui_id				INT(4) 			PRIMARY KEY 		AUTO_INCREMENT,
    ui_type				ENUM('text','image'),
    element_contents	VARCHAR(250), 
    element_shape		VARCHAR(50),
    element_description	VARCHAR(250)
);

